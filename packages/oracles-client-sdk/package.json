{
  "name": "@ixo/oracles-client-sdk",
  "version": "0.1.1",
  "type": "module",
  "private": false,
  "description": "Client SDK for interacting with IXO Oracles, designed for React applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "@ixo/oracles-chain-client": "workspace:*",
    "@tanstack/react-query": "^5.29.0",
    "eventsource": "^3.0.6"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@ixo/eslint-config": "workspace:*",
    "@ixo/jest-config": "workspace:*",
    "@ixo/oracles-events": "workspace:^",
    "@ixo/typescript-config": "workspace:*",
    "@testing-library/react": "^14.2.1",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.79",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.2.0",
    "ts-jest": "^29.1.2",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "publishConfig": {
    "access": "public"
  }
}

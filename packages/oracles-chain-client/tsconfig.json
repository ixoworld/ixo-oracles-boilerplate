{
  "extends": "@ixo/typescript-config/nestjs.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "rootDir": "src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "types": ["jest", "node"],
    "incremental": false,
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.test.ts"],
  "exclude": ["node_modules", "dist", "integration", "**/*.spec.ts"]
}

{
  "name": "@ixo/matrix",
  "version": "1.2.1",
  "type": "module",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "module": "./dist/src/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "exports": {
    ".": {
      "require": "./dist/src/index.js",
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    },
    "./types": {
      "require": "./dist/src/types/index.js",
      "import": "./dist/src/types/index.js",
      "types": "./dist/src/types/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@ixo/eslint-config": "workspace:*",
    "@ixo/typescript-config": "workspace:*",
    "@ixo/vitest-config": "workspace:*",
    "@langchain/core": "1.0.6",
    "@langchain/langgraph": "^1.0.2",
    "@langchain/langgraph-checkpoint-validation": "^1.0.0",
    "@testcontainers/postgresql": "^10.16.0",
    "rimraf": "^6.0.1",
    "testcontainers": "^10.16.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@ixo/logger": "workspace:*",
    "@langchain/langgraph-checkpoint": "^1.0.0",
    "dotenv": "^17.2.0",
    "marked": "^16.4.0",
    "matrix-bot-sdk": "npm:@ixo/matrix-bot-sdk@^0.8.0-ixo.5",
    "matrix-js-sdk": "^37.11.0",
    "superjson": "1.13.3"
  }
}

{
  "name": "@ixo/matrix",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc --skipLibCheck --project tsconfig .json",
    "test": "jest -c jest.config.js",
    "test:watch": "jest --watch -c jest.config.js",
    "test:e2e": "jest -c jest.integration.config.js --forceExit --detectOpenHandles"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "require": "./dist/types/index.js",
      "import": "./src/types.ts",
      "types": "./dist/types/index.d.ts"
    }
  },
  "devDependencies": {
    "@ixo/eslint-config": "workspace:*",
    "@ixo/jest-config": "workspace:*",
    "@ixo/typescript-config": "workspace:*",
    "@jest/types": "^29.6.3",
    "@testcontainers/postgresql": "^10.16.0",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "testcontainers": "^10.16.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@ixo/logger": "workspace:*",
    "@matrix-org/olm": "3.2.15",
    "matrix-js-sdk": "32.4.0",
    "superjson": "1.13.3"
  }
}
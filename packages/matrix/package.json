    "@testcontainers/postgresql": "^10.16.0",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "testcontainers": "^10.16.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
